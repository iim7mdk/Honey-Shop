 <% layout('layouts/boilerplate')%>
    
            <div class="container py-5 d-flex justify-content-center">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden" style="max-width: 420px; width: 100%;">
                <!-- Top image -->
                <img src="https://images.pexels.com/photos/211467/pexels-photo-211467.jpeg"
                    class="img-fluid" style="height: 200px; object-fit: cover;" alt="Register">
    
                <div class="card-body p-4">
                    <h3 class="card-title text-center mb-4">Create an Account</h3>
                    <form action="/register" method="POST" class="needs-validation" novalidate>
                        <!-- Username -->
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="username" name="username" placeholder="Username"
                                required autofocus>
                            <label for="username">Username</label>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
    
                        <!-- Email -->
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com"
                                required>
                            <label for="email">Email</label>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
    
                        <!-- Password -->
                        <div class="form-floating mb-4">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password"
                                required>
                            <label for="password">Password</label>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
    
                        <!-- Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>