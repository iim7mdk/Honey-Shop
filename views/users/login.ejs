<% layout('layouts/boilerplate') %>

    <div class="container d-flex justify-content-center align-items-start mt-4" dir="rtl">
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden" style="max-width: 900px; width: 100%;">
            <div class="row g-0">

                <!-- قسم الصورة -->
                <div class="col-md-6 d-none d-md-block">
                    <img src="https://images.pexels.com/photos/211467/pexels-photo-211467.jpeg" alt="صورة تسجيل الدخول"
                        class="img-fluid h-100" style="object-fit: cover;">
                </div>

                <!-- قسم النموذج -->
                <div class="col-md-6 bg-white p-5">
                    <h2 class="mb-4 text-center fw-bold text-warning">مرحبًا بعودتك</h2>

                    <form action="/login" method="POST" class="needs-validation" novalidate>
                        <!-- اسم المستخدم -->
                        <div class="mb-3">
                            <label for="username" class="form-label">اسم المستخدم</label>
                            <input type="text" class="form-control" id="username" name="username" required autofocus>
                            <div class="invalid-feedback">يرجى إدخال اسم المستخدم.</div>
                        </div>

                        <!-- كلمة المرور -->
                        <div class="mb-3">
                            <label for="password" class="form-label">كلمة المرور</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                            <div class="invalid-feedback">يرجى إدخال كلمة المرور.</div>
                        </div>

                        <!-- روابط إضافية -->
                        <div class="d-flex justify-content-between mb-4">
                            <a href="/forgot-password" class="text-decoration-none text-muted small">نسيت كلمة
                                المرور؟</a>
                            <a href="/register" class="text-decoration-none text-muted small">إنشاء حساب جديد</a>
                        </div>

                        <!-- زر الدخول -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning btn-lg">تسجيل الدخول</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>