<% layout('/layouts/boilerplate') %>

    <div class="container py-5" dir="rtl">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="text-center mb-4">إضافة منتج جديد</h1>

                <form action="/products" method="POST" enctype="multipart/form-data" class="needs-validation"
                    novalidate>
                    <!-- اسم المنتج -->
                    <div class="mb-3">
                        <label for="title" class="form-label">اسم المنتج</label>
                        <input type="text" class="form-control" id="title" name="product[title]"
                            placeholder="مثال: عسل اصلي سمره" required>
                        <div class="invalid-feedback">يرجى إدخال اسم المنتج.</div>
                    </div>

                    <!-- السعر -->
                    <div class="mb-3">
                        <label for="price" class="form-label">السعر</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input type="number" step="0.01" class="form-control" id="price" name="product[price]"
                                placeholder="مثال: 75.00" required>
                            <div class="invalid-feedback">يرجى إدخال سعر صالح.</div>
                        </div>
                    </div>

                    <!-- الوصف -->
                    <div class="mb-3">
                        <label for="description" class="form-label">الوصف</label>
                        <textarea class="form-control" id="description" name="product[description]" rows="4"
                            placeholder="صف الميزات، النمط، أو طريقة الاستخدام..." required></textarea>
                        <div class="invalid-feedback">يرجى إدخال وصف للمنتج.</div>
                    </div>

                    <!-- الصور -->
                    <div class="mb-3">
                        <label for="image" class="form-label">رفع الصور</label>
                        <input class="form-control" type="file" id="image" name="image" multiple>
                        <div id="file-names" class="form-text mt-1"></div>
                    </div>

                    <!-- زر الإرسال -->
                    <div class="d-grid">
                        <button class="btn btn-success" type="submit">
                            <i class="fas fa-plus me-2"></i> إضافة المنتج
                        </button>
                    </div>
                </form>

                <!-- رابط العودة -->
                <div class="text-center mt-4">
                    <a href="/products" class="text-decoration-none">
                        <i class="fas fa-arrow-left me-1"></i> العودة إلى جميع المنتجات
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- معاينة أسماء الملفات -->
    <script>
        document.getElementById('image').addEventListener('change', function () {
            const fileNames = Array.from(this.files).map(f => f.name).join(', ');
            document.getElementById('file-names').textContent = fileNames || 'لم يتم اختيار ملفات.';
        });

        // التحقق من صحة النموذج باستخدام Bootstrap
        (function () {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>