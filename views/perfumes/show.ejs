<% layout('/layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/stars.css">

    <div class="container my-5">
        <div class="row g-5 align-items-start">

            <!-- Images Carousel -->
            <div class="col-lg-6">
                <div id="perfumeCarousel" class="carousel slide rounded shadow" data-bs-ride="carousel">
                    <div class="carousel-inner rounded">
                        <% perfume.images.forEach((img, i)=> { %>
                            <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                                <img src="<%= img.url %>" class="d-block w-100" alt="Perfume Image">
                            </div>
                            <% }) %>
                    </div>
                    <% if (perfume.images.length> 1) { %>
                        <button class="carousel-control-prev" type="button" data-bs-target="#perfumeCarousel"
                            data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#perfumeCarousel"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                        <% } %>
                </div>
            </div>

            <!-- Perfume Details -->
            <div class="col-lg-6">
                <h1 class="display-5 fw-bold">
                    <%= perfume.title %>
                </h1>
                <p class="lead text-muted mb-3">
                    <%= perfume.category %>
                </p>
                <p class="lead text-muted mb-3">
                    <%= perfume.description %>
                </p>
                <h4 class="text-success mb-3">$<%= perfume.price %>
                </h4>
                <!-- <p class="text-muted small mb-4">Posted 2 days ago</p> -->

                <% if(currentUser && perfume.author.equals(currentUser._id)){ %>
                    <a href="/perfumes/<%= perfume._id %>/edit" class="btn btn-outline-primary me-2">Edit</a>
                    <form class="d-inline" action="/perfumes/<%= perfume._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-outline-danger">Delete</button>
                    </form>
                    <% } %>
            </div>
        </div>

        <hr class="my-5">

        <!-- Review Section -->
        <div class="row">
            <div class="col-lg-6">
                <% if (currentUser) { %>
                    <h3 class="mb-3">Leave a Review</h3>
                    <form action="/perfumes/<%= perfume._id %>/reviews" method="POST" class="validated-form" novalidate>
                        <fieldset class="starability-basic mb-3">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0"
                                checked />
                            <% for(let i=1; i <=5; i++) { %>
                                <input type="radio" id="rate<%= i %>" name="review[rating]" value="<%= i %>" />
                                <label for="rate<%= i %>">
                                    <%= i %> star
                                </label>
                                <% } %>
                        </fieldset>
                        <div class="mb-3">
                            <label for="body" class="form-label">Your Review</label>
                            <textarea name="review[body]" id="body" class="form-control" rows="4" required></textarea>
                        </div>
                        <button class="btn btn-success">Submit Review</button>
                    </form>
                    <% } else { %>
                        <p class="text-muted">You must be logged in to leave a review.</p>
                        <% } %>
            </div>

            <div class="col-lg-6">
                <h3 class="mb-4">Customer Reviews</h3>
                <% if (perfume.reviews.length===0) { %>
                    <p class="text-muted fst-italic">No reviews yet. Be the first to write one!</p>
                    <% } %>
                        <% for (let review of perfume.reviews) { %>
                            <div class="card mb-3 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title mb-1">
                                        <%= review.author.username %>
                                    </h5>
                                    <p class="starability-result" data-rating="<%= review.rating %>">Rated: <%=
                                            review.rating %> stars</p>
                                    <p class="card-text">
                                        <%= review.body %>
                                    </p>
                                    <% if (currentUser && review.author.equals(currentUser._id)) { %>
                                        <form
                                            action="/perfumes/<%= perfume._id %>/reviews/<%= review._id %>?_method=DELETE"
                                            method="POST">
                                            <button class="btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                        <% } %>
                                </div>
                            </div>
                            <% } %>
            </div>
        </div>
    </div>