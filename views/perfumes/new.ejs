<% layout('/layouts/boilerplate') %>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="text-center mb-4">Add New Perfume</h1>

                <form action="/perfumes" method="POST" enctype="multipart/form-data" class="needs-validation"
                    novalidate>
                    <!-- Title -->
                    <div class="mb-3">
                        <label for="title" class="form-label">Perfume Name</label>
                        <input type="text" class="form-control" id="title" name="perfume[title]"
                            placeholder="e.g. Dior Sauvage" required>
                        <div class="invalid-feedback">Please enter the perfume name.</div>
                    </div>

                    <!-- Brand -->
                    <div class="mb-3">
                        <label for="brand" class="form-label">Brand</label>
                        <input type="text" class="form-control" id="brand" name="perfume[brand]"
                            placeholder="e.g. Chanel" required>
                        <div class="invalid-feedback">Please enter the perfume brand.</div>
                    </div>

                    <!-- Price -->
                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input type="number" step="0.01" class="form-control" id="price" name="perfume[price]"
                                placeholder="e.g. 75.00" required>
                            <div class="invalid-feedback">Please enter a valid price.</div>
                        </div>
                    </div>

                    <!-- Category -->
                    <div class="mb-3">
                        <label for="category" class="form-label">Category</label>
                        <select class="form-select" id="category" name="perfume[category]" required>
                            <option selected disabled value="">Select a category</option>
                            <option value="Men">Men</option>
                            <option value="Women">Women</option>
                            <option value="Kids">Kids</option>
                        </select>
                        <div class="invalid-feedback">Please choose a category.</div>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" name="perfume[description]" rows="4"
                            placeholder="Describe the scent, notes, and style..." required></textarea>
                        <div class="invalid-feedback">Please enter a description.</div>
                    </div>

                    <!-- Images -->
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Images</label>
                        <input class="form-control" type="file" id="image" name="image" multiple>
                        <div id="file-names" class="form-text mt-1"></div>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid">
                        <button class="btn btn-success" type="submit">
                            <i class="fas fa-plus me-2"></i> Add Perfume
                        </button>
                    </div>
                </form>

                <!-- Back Link -->
                <div class="text-center mt-4">
                    <a href="/perfumes" class="text-decoration-none">
                        <i class="fas fa-arrow-left me-1"></i> Back to All Perfumes
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- File name preview -->
    <script>
        document.getElementById('image').addEventListener('change', function () {
            const fileNames = Array.from(this.files).map(f => f.name).join(', ');
            document.getElementById('file-names').textContent = fileNames || 'No files selected.';
        });

        // Bootstrap validation
        (function () {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>